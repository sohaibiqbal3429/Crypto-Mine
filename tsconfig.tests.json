{
  "compilerOptions": {
    "outDir": "./dist-tests",
    "noEmit": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2019",
    "lib": ["es2019"],
    "allowJs": false,
    "isolatedModules": false,
    "emitDeclarationOnly": false,
    "declaration": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "lib/utils/locked-capital.ts",
    "lib/validations/**/*.ts",
    "lib/services/lucky-draw-deposits.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
