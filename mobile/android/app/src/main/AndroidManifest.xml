<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.cryptominemobile">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.cryptominemobile.MainApplication"
        android:label="Crypto Mine"
        android:icon="@drawable/ic_launcher_foreground"
        android:roundIcon="@drawable/ic_launcher_foreground"
        android:usesCleartextTraffic="true"
        android:allowBackup="false"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.cryptominemobile.MainActivity"
            android:exported="true"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
